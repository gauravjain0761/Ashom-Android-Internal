<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewmodel"
            type="com.ashomapp.presentation.forum.ForumViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/btn_color"
    android:fitsSystemWindows="false"

    tools:context=".presentation.forum.comments.ForumComments">
<include
    android:id="@+id/toolbar"
    layout="@layout/toolbar"/>
<androidx.core.widget.NestedScrollView
    android:id="@+id/comment_scrollview"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="@drawable/page_bg"
    android:elevation="2dp"
    app:layout_constraintTop_toBottomOf="@id/toolbar"
    app:layout_constraintBottom_toTopOf="@id/et_comment_container">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">
        <include
            android:id="@+id/forum_container"
            layout="@layout/item_forum_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/comments_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/forum_container"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Comments"
            android:layout_margin="10dp"
            android:textSize="15sp"
            android:textColor="@color/textcolor"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/no_comment_found"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            app:layout_constraintTop_toBottomOf="@id/comments_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:src="@drawable/no_comment_bg"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/comment_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/comments_title"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/item_comments"
            android:nestedScrollingEnabled="true"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
    <androidx.cardview.widget.CardView
        android:id="@+id/et_comment_container"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardBackgroundColor="#f3f2f7"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginVertical="13dp"
            android:layout_marginHorizontal="5dp"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_forum_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/user_profile"/>
            <EditText
                android:id="@+id/et_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/item_forum_profile"
                app:layout_constraintEnd_toStartOf="@id/send_comment"
                android:textColor="@color/textcolor"
                android:textSize="15sp"
                android:text="@={viewmodel.mcomment}"
                android:layout_marginHorizontal="10dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:singleLine="true"
                android:textColorHint="@color/hint_color"
                android:hint="Share your thoughts.."
                android:background="@drawable/et_comment_bg"
                />
            <ImageView
                android:id="@+id/send_comment"
                android:layout_width="34dp"
                android:layout_height="34dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/send_icon"
                android:layout_marginHorizontal="10dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>