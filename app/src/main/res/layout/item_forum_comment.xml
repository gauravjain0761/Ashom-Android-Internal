<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="forumdto"
            type="com.ashomapp.network.response.dashboard.ForumDTO" />
        <variable
            name="selectedoption"
            type="Integer" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        android:elevation="5dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_forum_profile"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/user_profile"/>
            <TextView
                android:id="@+id/item_forum_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/item_forum_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/item_forum_profile"
                android:text="Android User"
                android:textSize="18sp"
                android:layout_marginHorizontal="10dp"
                android:singleLine="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/item_forum_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/item_forum_profile"
                app:layout_constraintEnd_toEndOf="@id/item_forum_name"
                app:layout_constraintTop_toBottomOf="@id/item_forum_name"
                android:text="@{forumdto.email}"
                android:textSize="15sp"
                android:visibility="gone"
                android:singleLine="true"
                android:layout_marginStart="10dp"
                android:textColor="@color/grey"
                />
            <TextView
                android:id="@+id/item_forum_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/item_forum_profile"
                app:layout_constraintEnd_toEndOf="@id/item_forum_name"
                app:layout_constraintTop_toBottomOf="@id/item_forum_name"
                android:textSize="11sp"
                android:layout_marginStart="10dp"
                android:textColor="@color/grey"
                />
            <View
                android:id="@+id/item_forum_view"
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:background="@color/app_color"
                android:layout_marginBottom="-5dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/item_forum_profile"
                app:layout_constraintBottom_toBottomOf="@id/item_forum_description"
                app:layout_constraintStart_toStartOf="@id/item_forum_profile"
                app:layout_constraintEnd_toEndOf="@id/item_forum_profile"/>
            <TextView
                android:id="@+id/item_forum_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_forum_profile"
                tools:text="hello fbhj bfsdj jfbsdj  fjbfsd jbbsdfjk f asdjfba bfdjskb asbjkfba jsdfadbfhasd jfsdbfjsdabjkfbsdjkfjhb  hjsdbfjh  fjbhsdj fjkbh"
                android:textSize="13sp"
                android:maxLines="6"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:textColor="#454444"
                />
           <LinearLayout
               app:layout_constraintTop_toBottomOf="@id/item_forum_description"
               android:id="@+id/some_container"
               android:layout_width="match_parent"
               android:orientation="vertical"
               app:layout_constraintBottom_toBottomOf="parent"
               android:layout_marginBottom="10dp"
               android:layout_marginHorizontal="10dp"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:id="@+id/forum_option_container"
                   android:layout_width="match_parent"
                   android:orientation="vertical"
                   android:layout_height="wrap_content">
                   <TextView
                       android:id="@+id/option1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textSize="13sp"
                       tools:text="Option 1"
                       android:textColor="@color/black"
                       tools:background="@drawable/et_search_bg"
                       android:background="@{selectedoption == 1 ? @drawable/et_search_bg_fill : @drawable/et_search_bg}"
                       android:layout_marginTop="5dp"
                       android:padding="10dp"/>
                   <TextView
                       android:id="@+id/option2"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textSize="13sp"
                       tools:text="Option 1"
                       tools:background="@drawable/et_search_bg"
                       android:background="@{selectedoption == 2 ? @drawable/et_search_bg_fill : @drawable/et_search_bg}"
                       android:textColor="@color/black"
                       android:layout_marginTop="5dp"
                       android:padding="10dp"/>
                   <TextView
                       android:id="@+id/option3"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textSize="13sp"
                       tools:text="Option 1"
                       tools:background="@drawable/et_search_bg"
                       android:background="@{selectedoption == 3 ? @drawable/et_search_bg_fill : @drawable/et_search_bg}"
                       android:textColor="@color/black"
                       android:layout_marginTop="5dp"
                       android:padding="10dp"/>

               </LinearLayout>
               <androidx.cardview.widget.CardView
                   android:id="@+id/item_forum_image_container"
                   android:layout_width="match_parent"
                   app:cardCornerRadius="10dp"
                   android:elevation="2dp"
                   android:visibility="gone"
                   android:layout_marginVertical="5dp"
                   android:layout_height="150dp">
                   <ImageView
                       android:id="@+id/item_forum_image"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:scaleType="centerCrop"
                       android:background="@drawable/placeholder"/>
               </androidx.cardview.widget.CardView>

               <TextView
                   android:id="@+id/item_forum_link"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:layout_constraintTop_toBottomOf="@id/item_forum_image_container"
                   android:textSize="10sp"
                   android:maxLines="3"
                   tools:text="@tools:sample/lorem"
                   android:layout_marginVertical="5dp"
                   android:textColor="@color/app_color"
                   />
           </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>