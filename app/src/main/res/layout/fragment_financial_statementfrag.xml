<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="periodselection"
            type="Integer" />
        <variable
            name="yearselect"
            type="Boolean" />
        <import type="android.view.View" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/btn_color"
    tools:context=".presentation.home.FinancialStatementfrag">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/btn_color"
 >

        <include
        android:id="@+id/mtoolbar"
        layout="@layout/toolbar"
        />
    <!--  android:visibility="@{yearselect ? View.VISIBLE : View.INVISIBLE}"
    -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="807dp"
                android:background="@drawable/page_bg"
                android:backgroundTint="#f0f0f6"
                android:elevation="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mtoolbar">

                <LinearLayout
                    android:id="@+id/year_selection_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.2"
                    android:background="@color/black"
                    android:elevation="20dp"
                    android:orientation="horizontal"
                    android:visibility="@{yearselect ? View.VISIBLE : View.INVISIBLE}" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="21dp"
                    android:visibility="@{yearselect ? View.VISIBLE : View.INVISIBLE}"
                    android:weightSum="3"
                    app:layout_constraintTop_toBottomOf="@id/time_period_selection">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="-2dp"
                        android:layout_weight="1"
                        android:elevation="20dp"
                        android:visibility="@{yearselect ? View.VISIBLE : View.INVISIBLE}"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="15dp">

                        <include
                            android:id="@+id/year_select"
                            layout="@layout/item_year_list" />
                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/time_period_selection"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/time_period_year"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/app_color"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingHorizontal="30dp"
                                android:text="Year"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/year_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:paddingHorizontal="30dp"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                tools:text="2021" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/time_period_annual"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@{periodselection == 0 ? @color/app_color : @color/white}"
                        app:cardCornerRadius="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingHorizontal="0dp"
                            android:text="Annual"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2">

                            <LinearLayout
                                android:id="@+id/first_qtr"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_marginStart="0dp"
                                android:layout_marginTop="0dp"
                                android:background="@drawable/country_item_bg"
                                android:backgroundTint="@{periodselection == 1 ? @color/app_color : @color/white}"
                                android:gravity="center"
                                app:cardCornerRadius="10dp"
                                app:layout_constraintBottom_toTopOf="@id/third_qtr"
                                app:layout_constraintEnd_toStartOf="@id/second_qtr"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:backgroundTint="@color/app_color">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:paddingHorizontal="2dp"
                                    android:text="1st Qtr"
                                    android:textColor="@color/black"
                                    android:textSize="10sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/second_qtr"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_marginStart="0dp"
                                android:layout_marginTop="0dp"
                                android:layout_marginEnd="0dp"
                                android:background="@drawable/country_item_bg"
                                android:backgroundTint="@{periodselection == 2 ? @color/app_color : @color/white}"
                                android:elevation="0dp"
                                android:gravity="center"
                                app:cardCornerRadius="10dp"
                                app:layout_constraintBottom_toTopOf="@id/fourth_qtr"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/first_qtr"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:backgroundTint="@color/white">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:paddingHorizontal="2dp"
                                    android:text="2nd Qtr"
                                    android:textColor="@color/black"
                                    android:textSize="10sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/third_qtr"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_marginStart="0dp"
                                android:layout_marginTop="0dp"
                                android:layout_marginBottom="0dp"
                                android:background="@drawable/country_item_bg"
                                android:backgroundTint="@{periodselection == 3 ? @color/app_color : @color/white}"
                                android:elevation="0dp"
                                android:gravity="center"
                                app:cardCornerRadius="10dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/fourth_qtr"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/first_qtr"
                                tools:backgroundTint="@color/white">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:paddingHorizontal="2dp"
                                    android:text="3rd Qtr"
                                    android:textColor="@color/black"
                                    android:textSize="10sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/fourth_qtr"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_marginStart="0dp"
                                android:layout_marginTop="0dp"
                                android:layout_marginEnd="0dp"
                                android:layout_marginBottom="0dp"
                                android:background="@drawable/country_item_bg"
                                android:backgroundTint="@{periodselection == 4 ? @color/app_color : @color/white}"
                                android:elevation="0dp"
                                android:gravity="center"
                                app:cardCornerRadius="10dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/third_qtr"
                                app:layout_constraintTop_toBottomOf="@id/second_qtr"
                                tools:backgroundTint="@color/white">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:paddingHorizontal="2dp"
                                    android:text="4th Qtr"
                                    android:textColor="@color/black"
                                    android:textSize="10sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/time_period_selection">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:alpha="0"
                        android:background="@android:color/transparent"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        app:layout_constraintBottom_toBottomOf="@id/statement_list"
                        app:layout_constraintTop_toTopOf="@id/statement_list" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/statement_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="1dp"
                        android:layoutAnimation="@anim/recycler_layout_animation"
                        android:paddingVertical="5dp"
                        android:paddingBottom="10dp"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:layout_constraintTop_toTopOf="parent"
                        app:spanCount="2"
                        tools:listitem="@layout/item_financial_statements" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>