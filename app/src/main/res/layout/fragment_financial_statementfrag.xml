<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="periodselection"
            type="Integer" />
        <variable
            name="yearselect"
            type="Boolean" />
        <import type="android.view.View" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/btn_color"
    tools:context=".presentation.home.FinancialStatementfrag">

    <include
        android:id="@+id/mtoolbar"
        layout="@layout/toolbar"
        />
    <!--  android:visibility="@{yearselect ? View.VISIBLE : View.INVISIBLE}"
    -->
   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       app:layout_constraintTop_toBottomOf="@id/mtoolbar"
       app:layout_constraintBottom_toBottomOf="parent"
       android:background="@drawable/page_bg"
       android:backgroundTint="#f0f0f6"
       android:elevation="2dp"
       android:layout_height="0dp">
       <LinearLayout
           android:id="@+id/year_selection_view"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@color/black"
           android:orientation="horizontal"
           android:elevation="20dp"
           android:visibility="@{yearselect ? View.VISIBLE : View.INVISIBLE}"
           android:alpha="0.2"/>
       <LinearLayout
           android:layout_width="match_parent"
           app:layout_constraintTop_toBottomOf="@id/time_period_selection"
           android:weightSum="3"
           android:elevation="21dp"
           android:visibility="@{yearselect ? View.VISIBLE : View.INVISIBLE}"
           android:layout_height="wrap_content">
           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:elevation="20dp"
               android:layout_marginTop="-2dp"
               android:layout_marginHorizontal="5dp"
               android:layout_height="wrap_content"
               app:cardCornerRadius="15dp"
               android:layout_weight="1"
               android:visibility="@{yearselect ? View.VISIBLE : View.INVISIBLE}"
               app:cardBackgroundColor="@color/white"
               >
               <include
                   android:id="@+id/year_select"
                   layout="@layout/item_year_list"
                   />
           </androidx.cardview.widget.CardView>
           <View
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1"

               />
           <View
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               />

       </LinearLayout>


       <LinearLayout
           android:id="@+id/time_period_selection"
           android:layout_width="match_parent"
           app:layout_constraintTop_toTopOf="parent"
           android:orientation="horizontal"
           android:weightSum="3"
           android:layout_height="58dp">
           <androidx.cardview.widget.CardView
               android:id="@+id/time_period_year"
               android:layout_width="match_parent"
               app:cardBackgroundColor="@color/white"
               android:backgroundTint="@color/app_color"
               android:layout_margin="5dp"
               android:layout_weight="1"
               app:cardCornerRadius="10dp"
               android:layout_height="match_parent">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="vertical"
                   android:gravity="center"
                   android:layout_gravity="center"
                   android:layout_height="match_parent"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:text="Year"
                       android:paddingHorizontal="30dp"
                       android:textSize="14sp"
                       android:textStyle="bold"
                       android:textColor="@color/black"
                       />
                   <TextView
                       android:id="@+id/year_tv"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       tools:text="2021"
                       android:textStyle="bold"
                       android:layout_marginTop="5dp"
                       android:paddingHorizontal="30dp"
                       android:textSize="14sp"
                       android:textColor="@color/black"
                       />
               </LinearLayout>
           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:id="@+id/time_period_annual"
               android:layout_width="match_parent"
               app:cardBackgroundColor="@{periodselection == 0 ? @color/app_color : @color/white}"
               android:layout_margin="5dp"
               android:layout_weight="1"
               app:cardCornerRadius="10dp"
               android:layout_height="match_parent">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:text="Annual"
                   android:textStyle="bold"
                   android:paddingHorizontal="0dp"
                   android:textSize="15sp"
                   android:textColor="@color/black"
                   />
           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               app:cardBackgroundColor="@color/white"
               android:layout_margin="5dp"
               android:layout_weight="1"
               app:cardCornerRadius="10dp"
               android:layout_height="match_parent">
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_weight="1.2"
                   android:layout_height="match_parent">

                   <LinearLayout
                       android:id="@+id/first_qtr"
                       android:layout_width="0dp"
                       android:background="@drawable/country_item_bg"
                       tools:backgroundTint="@color/app_color"
                       android:backgroundTint="@{periodselection == 1 ? @color/app_color : @color/white}"
                       android:layout_marginStart="0dp"
                       android:layout_marginTop="0dp"
                        android:gravity="center"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintEnd_toStartOf="@id/second_qtr"
                       app:cardCornerRadius="10dp"
                       app:layout_constraintBottom_toTopOf="@id/third_qtr"
                       android:layout_height="0dp">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:text="1st Qtr"
                           android:paddingHorizontal="2dp"
                           android:textSize="10sp"
                           android:textStyle="bold"
                           android:textColor="@color/black"
                           />
                   </LinearLayout>
                   <LinearLayout
                       android:id="@+id/second_qtr"
                       android:layout_width="0dp"
                       android:background="@drawable/country_item_bg"
                       tools:backgroundTint="@color/white"
                       android:gravity="center"
                       android:backgroundTint="@{periodselection == 2 ? @color/app_color : @color/white}"
                       android:layout_marginStart="0dp"
                       android:layout_marginTop="0dp"
                       android:layout_marginEnd="0dp"
                       android:elevation="0dp"
                       app:layout_constraintStart_toEndOf="@id/first_qtr"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintBottom_toTopOf="@id/fourth_qtr"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:cardCornerRadius="10dp"
                       android:layout_height="0dp">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:text="2nd Qtr"
                           android:paddingHorizontal="2dp"
                           android:textSize="10sp"
                           android:textStyle="bold"
                           android:textColor="@color/black"
                           />
                   </LinearLayout>
                   <LinearLayout
                       android:id="@+id/third_qtr"
                       android:layout_width="0dp"
                       android:background="@drawable/country_item_bg"
                       tools:backgroundTint="@color/white"
                       android:gravity="center"
                       android:backgroundTint="@{periodselection == 3 ? @color/app_color : @color/white}"
                       android:layout_marginStart="0dp"
                       android:layout_marginTop="0dp"
                       android:layout_marginBottom="0dp"
                       android:elevation="0dp"
                       app:layout_constraintTop_toBottomOf="@id/first_qtr"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintEnd_toStartOf="@id/fourth_qtr"
                       app:cardCornerRadius="10dp"
                       android:layout_height="0dp">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:text="3rd Qtr"
                           android:paddingHorizontal="2dp"
                           android:textSize="10sp"
                           android:textStyle="bold"
                           android:textColor="@color/black"
                           />
                   </LinearLayout>
                   <LinearLayout
                       android:id="@+id/fourth_qtr"
                       android:layout_width="0dp"
                       android:background="@drawable/country_item_bg"
                       tools:backgroundTint="@color/white"
                       android:gravity="center"
                       android:backgroundTint="@{periodselection == 4 ? @color/app_color : @color/white}"
                       android:layout_marginStart="0dp"
                       android:layout_marginTop="0dp"
                       android:layout_marginBottom="0dp"
                       android:layout_marginEnd="0dp"
                       android:elevation="0dp"
                       app:layout_constraintTop_toBottomOf="@id/second_qtr"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintStart_toEndOf="@id/third_qtr"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:cardCornerRadius="10dp"
                       android:layout_height="0dp">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:text="4th Qtr"
                           android:paddingHorizontal="2dp"
                           android:textSize="10sp"
                           android:textStyle="bold"
                           android:textColor="@color/black"
                           />
                   </LinearLayout>
               </androidx.constraintlayout.widget.ConstraintLayout>
           </androidx.cardview.widget.CardView>

       </LinearLayout>

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           app:layout_constraintTop_toBottomOf="@id/time_period_selection"
           app:layout_constraintBottom_toBottomOf="parent"
           android:layout_height="0dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/statement_list"
                app:layout_constraintBottom_toBottomOf="@id/statement_list"
                android:background="@android:color/transparent"
                android:paddingTop="10dp"
                android:alpha="0"
                android:paddingBottom="10dp"
                />
           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/statement_list"
               android:paddingVertical="5dp"
               tools:listitem="@layout/item_financial_statements"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
               app:spanCount="2"
               android:elevation="1dp"
               android:paddingBottom="10dp"
               android:layoutAnimation="@anim/recycler_layout_animation"
               app:layout_constraintTop_toTopOf="parent"
               />
       </androidx.constraintlayout.widget.ConstraintLayout>

   </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>