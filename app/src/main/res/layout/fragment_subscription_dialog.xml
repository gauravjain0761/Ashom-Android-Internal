<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="frag"
            type="com.ashomapp.presentation.forum.subscription.SubscriptionDialog" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:isScrollContainer="false"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/et_comment_bg"
        android:backgroundTint="@color/white"
         android:layout_marginHorizontal="15dp"
        tools:context=".presentation.forum.subscription.SubscriptionDialog">


        <TextView
            android:id="@+id/subscriprition_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Select the plan that fullfil your need."
            android:textColor="@color/btn_color"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cancel_dialog"
            android:layout_marginStart="10dp"/>
        <ImageView
            android:id="@+id/cancel_dialog"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_baseline_add_24"
            android:rotation="45"
            android:padding="2dp"
            android:layout_marginTop="5dp"
            android:onClick="@{() -> frag.canceldialog()}"
            app:tint="@color/btn_color"
            android:layout_marginHorizontal="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/subscriprition_dialog"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="10dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/subcription_free_purchase"
                    android:layout_width="103dp"
                    android:layout_height="wrap_content"
                    android:text="Subscribe"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:onClick="@{() -> frag.freesubscription()}"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="20dp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:elevation="20dp"
                    android:gravity="center"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/free_container"
                    android:layout_marginHorizontal="10dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/free_container"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="@color/light_gray"
                    android:layout_marginEnd="50dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintBottom_toTopOf="@id/monthly_container"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="wrap_content">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        android:background="@android:color/transparent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/subs_free_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Free"
                            android:textColor="@color/btn_color"
                            android:textSize="13sp"
                            android:fontFamily="@font/helvetica_bold"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginHorizontal="10dp"/>
                        <TextView
                            android:id="@+id/subs_free_timeperiod"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="INR 0/ Monthly"
                            android:textColor="@color/btn_color"
                            android:textSize="14sp"
                            android:fontFamily="@font/helvetica_bold"
                            android:textStyle="bold"
                            android:layout_marginTop="1dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/subs_free_title"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginHorizontal="10dp"/>
                        <LinearLayout
                            android:id="@+id/free_condition"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/subs_free_timeperiod"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginVertical="5dp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/free_tv1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="View 3 Companies' Financial Reports per Month."
                                android:textColor="#CC3E3C3C"
                                android:textSize="12sp"
                                android:drawableStart="@drawable/currect"
                                android:drawablePadding="10dp"
                                android:fontFamily="@font/segoe_ui"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginHorizontal="10dp"/>
                            <TextView
                                android:id="@+id/free_tv2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Access news on 700+ Traded Equities in the GCC Countries'(KSA, UAE, Kuwait, Bahrain, Qatar and Oman)."
                                android:textColor="#CC3E3C3C"
                                android:textSize="12sp"
                                android:fontFamily="@font/segoe_ui"
                                android:drawableStart="@drawable/currect"
                                android:drawablePadding="10dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toTopOf="@id/free_tv3"
                                app:layout_constraintTop_toBottomOf="@id/free_tv1"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginHorizontal="10dp"/>
                            <TextView
                                android:id="@+id/free_tv3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Share, Discuss, Engage Financial Knowledge and Buisness Thoughts in Our Forum"
                                android:textColor="#CC3E3C3C"
                                android:textSize="12sp"
                                android:fontFamily="@font/segoe_ui"
                                android:drawableStart="@drawable/currect"
                                android:drawablePadding="10dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/free_tv2"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginHorizontal="10dp"/>
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/subcription_monthly_purchase"
                    android:layout_width="103dp"
                    android:layout_height="wrap_content"
                    android:text="Subscribe"
                    android:textColor="@color/white"
                    android:textSize="12sp"

                    android:paddingVertical="10dp"
                    android:paddingHorizontal="20dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:elevation="20dp"
                    android:gravity="center"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/monthly_container"
                    android:layout_marginHorizontal="10dp"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/monthly_container"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/free_container"
                    app:cardCornerRadius="15dp"
                    android:layout_marginEnd="50dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="10dp"
                    app:layout_constraintBottom_toTopOf="@id/yearly_container"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginVertical="10dp"
                    app:cardBackgroundColor="@color/light_gray"
                    android:layout_height="wrap_content">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        android:background="@android:color/transparent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/subs_monthly_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Monthly"
                            android:textColor="@color/btn_color"
                            android:textSize="13sp"
                            android:fontFamily="@font/helvetica_bold"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginHorizontal="10dp"/>
                        <TextView
                            android:id="@+id/subs_monthly_timeperiod"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="INR 349/ Monthly"
                            android:textColor="@color/btn_color"
                            android:textSize="14sp"
                            android:fontFamily="@font/helvetica_bold"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/subs_monthly_title"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginHorizontal="10dp"/>
                        <LinearLayout
                            android:id="@+id/monthly_condition"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/subs_monthly_timeperiod"
                            android:layout_marginVertical="5dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="View 15 Companies' Financial Reports per Month."
                                android:textColor="#CC3E3C3C"
                                android:textSize="12sp"
                                android:fontFamily="@font/segoe_ui"
                                android:drawableStart="@drawable/currect"
                                android:drawablePadding="10dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/subs_free_title"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginHorizontal="10dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Access All Benefits Listed In the Free Subscription."
                                android:textColor="#CC3E3C3C"
                                android:textSize="12sp"
                                android:fontFamily="@font/segoe_ui"
                                android:drawableStart="@drawable/currect"
                                android:drawablePadding="10dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/subs_free_title"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginHorizontal="10dp"/>

                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/subcription_yearly_purchase"
                    android:layout_width="103dp"
                    android:layout_height="wrap_content"
                    android:text="Subscribe"
                    android:textColor="@color/white"
                    android:textSize="12sp"

                    android:paddingVertical="10dp"
                    android:paddingHorizontal="20dp"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:elevation="20dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/yearly_container"
                    android:layout_marginHorizontal="10dp"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/yearly_container"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/monthly_container"
                    app:cardCornerRadius="15dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/light_gray"
                    android:layout_height="wrap_content">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        android:background="@android:color/transparent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/subs_yearly_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Yearly (45% Discount)"
                            android:textColor="@color/btn_color"
                            android:textSize="13sp"
                            android:fontFamily="@font/helvetica_bold"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginHorizontal="10dp"/>
                        <TextView
                            android:id="@+id/subs_yearly_timeperiod"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="INR 2349/ Yearly"
                            android:textColor="@color/btn_color"
                            android:textSize="14sp"
                            android:fontFamily="@font/helvetica_bold"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/subs_yearly_title"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginHorizontal="10dp"/>
                        <LinearLayout
                            android:id="@+id/yearly_condition"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/subs_yearly_timeperiod"
                            android:layout_marginVertical="5dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Annual Subscription(Pay in Advance)"
                                android:textColor="#CC3E3C3C"
                                android:textSize="12sp"
                                android:fontFamily="@font/segoe_ui"
                                android:drawableStart="@drawable/currect"
                                android:drawablePadding="10dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/subs_free_title"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginHorizontal="10dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Unlimited Browsing of Financial Reports Covering 700+ Traded Equities"
                                android:textColor="#CC3E3C3C"
                                android:textSize="12sp"
                                android:fontFamily="@font/segoe_ui"
                                android:drawableStart="@drawable/currect"
                                android:drawablePadding="10dp"
                                android:layout_marginHorizontal="10dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Access All Benefits Listed in the Monthly Subscription"
                                android:textColor="#CC3E3C3C"
                                android:textSize="12sp"
                                android:fontFamily="@font/segoe_ui"
                                android:drawableStart="@drawable/currect"
                                android:drawablePadding="10dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginHorizontal="10dp"/>

                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/yearly_container"
                    android:layout_marginTop="20dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>