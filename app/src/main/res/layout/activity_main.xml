<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/btn_color"
        tools:context=".MainActivity">



        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/nav_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottom_app_bar"
            android:layout_marginBottom="-30dp"
            app:defaultNavHost="true"
            android:isScrollContainer="true"
            app:navGraph="@navigation/navigation_map" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_app_bar"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="85dp">



            <androidx.cardview.widget.CardView
                android:id="@+id/main_home2"
                android:layout_width="wrap_content"
                app:cardBackgroundColor="@color/app_color"
                app:cardCornerRadius="50dp"
                app:contentPadding="2dp"
                android:layout_marginBottom="-18dp"
                app:layout_constraintBottom_toTopOf="@id/main_home"
                app:layout_constraintStart_toStartOf="@id/main_home"
                app:layout_constraintEnd_toEndOf="@id/main_home"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/home_cv_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:elevation="10dp"
                    android:padding="9dp"
                    android:src="@drawable/home_tb_fill"
                    app:tint="@color/btn_color" />
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/main_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@color/btn_color"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@id/bottom_bar"
                app:layout_constraintStart_toStartOf="@id/bottom_bar"
                app:layout_constraintEnd_toStartOf="@id/main_setting"
                android:gravity="center">

                <ImageView
                    android:id="@+id/main_home3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:elevation="10dp"
                    android:src="@drawable/home_tb_fill"
                    app:tint="@color/white" />
                <TextView
                    android:id="@+id/main_home4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="9sp"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/main_setting2"
                android:layout_width="wrap_content"
                app:cardBackgroundColor="@color/app_color"
                app:cardCornerRadius="50dp"
                app:contentPadding="2dp"
                android:visibility="invisible"
                android:layout_marginBottom="-18dp"
                app:layout_constraintBottom_toTopOf="@id/main_setting"
                app:layout_constraintStart_toStartOf="@id/main_setting"
                app:layout_constraintEnd_toEndOf="@id/main_setting"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:elevation="10dp"
                    android:padding="7dp"
                    android:src="@drawable/companyanalysis"
                    app:tint="@color/btn_color" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/main_setting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/bottom_bar"
                app:layout_constraintStart_toEndOf="@id/main_home"
                app:layout_constraintEnd_toStartOf="@id/main_forum"
                android:padding="5dp"
                android:background="@color/btn_color"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/main_setting3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:elevation="10dp"
                    android:src="@drawable/companyanalysis"
                    app:tint="@color/white" />
                <TextView
                    android:id="@+id/main_setting4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FINANCIALS"
                    android:textColor="@color/white"
                    android:textSize="9sp"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/main_forum2"
                android:layout_width="wrap_content"
                app:cardBackgroundColor="@color/app_color"
                app:cardCornerRadius="50dp"
                app:contentPadding="2dp"
                android:visibility="invisible"
                android:layout_marginBottom="-18dp"
                app:layout_constraintBottom_toTopOf="@id/main_forum"
                app:layout_constraintStart_toStartOf="@id/main_forum"
                app:layout_constraintEnd_toEndOf="@id/main_forum"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:elevation="10dp"
                    android:padding="8dp"
                    android:src="@drawable/forum"
                    app:tint="@color/btn_color" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/main_forum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/bottom_bar"
                app:layout_constraintStart_toEndOf="@id/main_setting"
                app:layout_constraintEnd_toStartOf="@id/main_reader"
                android:padding="5dp"
                android:background="@color/btn_color"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/main_forum3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:elevation="10dp"
                    android:src="@drawable/forum"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/main_forum4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forum"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="9sp"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/main_reader2"
                android:layout_width="wrap_content"
                app:cardBackgroundColor="@color/app_color"
                app:cardCornerRadius="50dp"
                app:contentPadding="2dp"
                android:visibility="invisible"
                android:layout_marginBottom="-18dp"
                app:layout_constraintBottom_toTopOf="@id/main_reader"
                app:layout_constraintStart_toStartOf="@id/main_reader"
                app:layout_constraintEnd_toEndOf="@id/main_reader"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:elevation="10dp"
                    android:padding="7dp"
                    android:src="@drawable/news_fill"
                    app:tint="@color/btn_color" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/main_reader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/bottom_bar"
                app:layout_constraintStart_toEndOf="@id/main_forum"
                app:layout_constraintEnd_toStartOf="@id/main_search"
                android:padding="5dp"
                android:background="@color/btn_color"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/main_reader3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:elevation="10dp"
                    android:src="@drawable/news_fill"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/main_reader4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="News"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="9sp"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/main_search2"
                android:layout_width="wrap_content"
                app:cardBackgroundColor="@color/app_color"
                app:cardCornerRadius="50dp"
                app:contentPadding="2dp"
                android:visibility="invisible"
                android:layout_marginBottom="-18dp"
                app:layout_constraintBottom_toTopOf="@id/main_search"
                app:layout_constraintStart_toStartOf="@id/main_search"
                app:layout_constraintEnd_toEndOf="@id/main_search"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:elevation="10dp"
                    android:padding="5dp"
                    android:src="@drawable/search_icon_2"
                    app:tint="@color/btn_color" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/main_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/bottom_bar"
                app:layout_constraintStart_toEndOf="@id/main_reader"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="5dp"
                android:background="@color/btn_color"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/main_search3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:elevation="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/search_icon_2"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/main_search4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="9sp"/>
            </LinearLayout>

            <View
                android:id="@+id/bottom_bar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:weightSum="3"
                android:background="@android:color/transparent"
                android:orientation="horizontal"

                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>