<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="5dp"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/comment_pro"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/app_color"
        android:src="@drawable/user_profile"
        app:civ_circle_background_color="@color/app_color"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/comment_detail_container"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@id/comment_pro"
        app:layout_constraintStart_toEndOf="@id/comment_pro"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="10dp"
        android:layout_marginHorizontal="5dp"
        app:cardBackgroundColor="#F2F2F4"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/comment_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="user name"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/delete_comment"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/comment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 minutes ago"
                app:layout_constraintTop_toBottomOf="@id/comment_username"
                app:layout_constraintStart_toStartOf="@id/comment_username"
                android:textColor="#CC635E5E"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/comment_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="this is my testing comment"
                app:layout_constraintTop_toBottomOf="@id/comment_date"
                app:layout_constraintStart_toStartOf="@id/comment_username"
                android:textColor="#433C3C"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                />

            <ImageView
                android:id="@+id/delete_comment"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginHorizontal="5dp"
                app:layout_constraintEnd_toStartOf="@id/edit_comment"
                android:src="@drawable/delete"/>
            <ImageView
                android:id="@+id/edit_comment"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/edit"
                android:padding="2dp"
                android:layout_marginHorizontal="5dp"
                app:tint="@color/btn_color" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/comment_detail_container"
        app:layout_constraintStart_toStartOf="@id/comment_detail_container"
        android:text="Reply"
        android:layout_margin="5dp"
        android:textSize="12sp"
        android:paddingVertical="5dp"
        android:textColor="@color/btn_color"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/more_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/comment_detail_container"
        app:layout_constraintEnd_toEndOf="@id/comment_detail_container"
        android:text="More Reply"
        android:layout_margin="5dp"
        android:textSize="12sp"
        android:paddingVertical="5dp"
        android:textColor="@color/btn_color"
        android:textStyle="bold"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comment_reply_rv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/reply"
        app:layout_constraintStart_toStartOf="@id/comment_detail_container"
        app:layout_constraintEnd_toEndOf="@id/comment_detail_container"
        tools:listitem="@layout/item_comment_reply"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>