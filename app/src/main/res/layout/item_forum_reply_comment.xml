<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        android:elevation="5dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="20dp"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_forum_profile"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/user_profile"/>
            <TextView
                android:id="@+id/item_forum_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/item_forum_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Android User"
                android:textSize="15sp"
                android:singleLine="true"
                android:layout_marginTop="2dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/item_forum_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/item_forum_profile"
                app:layout_constraintEnd_toEndOf="@id/item_forum_name"
                app:layout_constraintTop_toBottomOf="@id/item_forum_name"
                android:textSize="11sp"
                android:layout_marginStart="10dp"
                android:textColor="@color/grey"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/item_forum_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_forum_profile"
                tools:text="hello fbhj bfsdj jfbsdj  fjbfsd jbbsdfjk f asdjfba bfdjskb asbjkfba jsdfadbfhasd jfsdbfjsdabjkfbsdjkfjhb  hjsdbfjh  fjbhsdj fjkbh"
                android:textSize="13sp"
                android:maxLines="6"
                android:layout_marginVertical="5dp"
                android:textColor="@color/black"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>