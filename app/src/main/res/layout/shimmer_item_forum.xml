<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="forumdto"
            type="com.ashomapp.network.response.dashboard.ForumDTO" />
        <variable
            name="selectedoption"
            type="Integer" />
        <import type="android.view.View" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_forum_profile"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:civ_border_color="@color/grey"
                app:civ_border_width="1dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@color/shimmer_color"/>
            <TextView
                android:id="@+id/item_forum_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/item_forum_profile"
                app:layout_constraintEnd_toStartOf="@id/delete_forum"
                app:layout_constraintTop_toTopOf="@id/item_forum_profile"
                android:background="@color/shimmer_color"
                android:textSize="13sp"
                android:layout_marginHorizontal="10dp"
                android:singleLine="true"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/item_forum_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/item_forum_profile"
                app:layout_constraintEnd_toEndOf="@id/item_forum_name"
                app:layout_constraintTop_toBottomOf="@id/item_forum_name"
                android:text="@{forumdto.email}"
                android:textSize="15sp"
                android:visibility="gone"
                android:singleLine="true"
                android:layout_marginStart="10dp"
                android:textColor="@color/grey"
                />
            <ImageView
                android:id="@+id/delete_forum"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@color/shimmer_color"
                android:layout_marginEnd="10dp"
                android:visibility="@{forumdto.isMine ? View.VISIBLE : View.INVISIBLE}"
                app:layout_constraintEnd_toStartOf="@id/edit_forum"
                app:layout_constraintTop_toTopOf="@id/item_forum_name"
                />
            <ImageView
                android:id="@+id/edit_forum"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@color/shimmer_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/item_forum_name"
                android:layout_marginEnd="10dp"
                android:padding="2dp" />
            <TextView
                android:id="@+id/item_forum_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/item_forum_profile"
                app:layout_constraintEnd_toEndOf="@id/item_forum_name"
                app:layout_constraintTop_toBottomOf="@id/item_forum_name"
                android:textSize="8sp"
                android:layout_marginStart="10dp"
                android:textColor="@color/grey"
                />
            <View
                android:id="@+id/item_forum_view"
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:background="@color/app_color"
                android:layout_marginBottom="-5dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/item_forum_profile"
                app:layout_constraintBottom_toBottomOf="@id/item_forum_description"
                app:layout_constraintStart_toStartOf="@id/item_forum_profile"
                app:layout_constraintEnd_toEndOf="@id/item_forum_profile"/>
            <TextView
                android:id="@+id/item_forum_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_forum_profile"
                android:textSize="13sp"
                android:background="@color/shimmer_color"
                android:minLines="3"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                />
           <LinearLayout
               app:layout_constraintTop_toBottomOf="@id/item_forum_description"
               android:id="@+id/some_container"
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:background="@drawable/et_comment_bg"
               android:backgroundTint="#f3f2f8"
               android:layout_marginTop="5dp"
               android:layout_marginHorizontal="10dp"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:id="@+id/forum_option_container"
                   android:layout_width="match_parent"
                   android:orientation="vertical"
                   android:visibility="gone"
                   android:background="@color/white"
                   android:layout_height="wrap_content">
                   <TextView
                       android:id="@+id/option1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textSize="13sp"
                       tools:text="Option 1"
                       android:textColor="@color/black"
                       tools:background="@drawable/et_search_bg"
                       android:background="@{selectedoption == 1 ? @drawable/et_search_bg_fill : @drawable/et_search_bg}"
                       android:layout_marginTop="5dp"
                       android:padding="10dp"/>
                   <TextView
                       android:id="@+id/option2"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textSize="13sp"
                       tools:text="Option 1"
                       tools:background="@drawable/et_search_bg"
                       android:background="@{selectedoption == 2 ? @drawable/et_search_bg_fill : @drawable/et_search_bg}"
                       android:textColor="@color/black"
                       android:layout_marginTop="5dp"
                       android:padding="10dp"/>
                   <TextView
                       android:id="@+id/option3"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textSize="13sp"
                       tools:text="Option 1"
                       tools:background="@drawable/et_search_bg"
                       android:background="@{selectedoption == 3 ? @drawable/et_search_bg_fill : @drawable/et_search_bg}"
                       android:textColor="@color/black"
                       android:layout_marginTop="5dp"
                       android:padding="10dp"/>

               </LinearLayout>
               <androidx.cardview.widget.CardView
                   android:id="@+id/item_forum_image_container"
                   android:layout_width="match_parent"
                   app:cardCornerRadius="10dp"
                   app:cardBackgroundColor="@color/white"
                   android:layout_height="200dp">
                   <ImageView
                       android:id="@+id/item_forum_image"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:scaleType="centerCrop"
                       android:background="@color/shimmer_color"/>
               </androidx.cardview.widget.CardView>

               <TextView
                   android:id="@+id/item_forum_link"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:layout_constraintTop_toBottomOf="@id/item_forum_image_container"
                   android:textSize="10sp"
                   android:maxLines="1"
                   android:ellipsize="end"
                   android:background="@color/shimmer_color"
                   android:layout_marginVertical="10dp"
                   android:textColor="@color/app_color"
                   />
           </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toTopOf="@id/option_container"
            android:background="@color/light_gray"/>
            <LinearLayout
                android:id="@+id/option_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/some_container"
                app:layout_constraintStart_toStartOf="@id/item_forum_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="1dp"
                android:paddingVertical="2dp"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:id="@+id/comment_container"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/shimmer_color"
                    android:layout_marginVertical="2dp"
                    android:layout_marginHorizontal="2dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@color/shimmer_color"
                        android:padding="2dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center_horizontal"
                        android:text="@{forumdto.total_comments}"
                        android:textColor="@color/black"
                        android:background="@color/shimmer_color"
                        android:textSize="8sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/like"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginVertical="2dp"
                    android:layout_marginHorizontal="2dp"
                    android:paddingHorizontal="3dp"
                    android:background="@color/shimmer_color"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:paddingHorizontal="2dp"

                        android:src="@{forumdto.liked ? @drawable/like_fill : @drawable/like }" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center_horizontal"
                        android:text="@{forumdto.total_liked}"
                        android:textColor="@color/black"
                        android:textSize="8sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/dislike"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginVertical="2dp"
                    android:layout_marginHorizontal="2dp"
                    android:paddingHorizontal="3dp"
                    android:background="@color/shimmer_color"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"

                         android:padding="2dp"
                        android:src="@{forumdto.disliked ? @drawable/dislike_fill : @drawable/dislike }"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center_horizontal"
                        android:text="@{forumdto.total_disliked}"
                        android:textColor="@color/black"
                        android:textSize="8sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/forum_share"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginVertical="2dp"
                    android:layout_marginHorizontal="2dp"
                    android:paddingHorizontal="3dp"
                    android:background="@color/shimmer_color"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"

                        android:paddingVertical="0dp"
                        android:paddingHorizontal="1dp"
                        app:tint="@color/black" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center_horizontal"
                        android:text="@{forumdto.share_count}"
                        android:textColor="@color/black"
                        android:textSize="8sp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>