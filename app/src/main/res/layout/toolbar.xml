<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_color"
        android:paddingVertical="5dp">

        <ImageView
            android:id="@+id/main_back"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:src="@drawable/back_1"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/main_back_view"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:cardBackgroundColor="#4DFFFFFF"
            android:alpha="0"
            app:layout_constraintTop_toTopOf="@id/main_back"
            app:layout_constraintBottom_toBottomOf="@id/main_back"
            app:layout_constraintStart_toStartOf="@id/main_back"
            app:layout_constraintEnd_toEndOf="@id/main_back"
            app:cardCornerRadius="100dp" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="42dp"
            android:layout_height="44dp"
            android:layout_marginVertical="10dp"
            android:src="@drawable/ashom_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginEnd="15dp"
            android:textColor="@color/app_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/notification_bell_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tool_profile"
            android:src="@drawable/bell"
            android:padding="3dp"
            android:layout_marginEnd="10dp"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/icon_badges"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:layout_constraintTop_toTopOf="@id/notification_bell_icon"
            app:layout_constraintEnd_toEndOf="@id/notification_bell_icon"
            android:background="@drawable/circle_bg"
            android:backgroundTint="@color/red"
            android:text="100"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:textSize="7dp"
            android:visibility="gone"
            android:textStyle="bold"
            android:gravity="center" />

        <androidx.cardview.widget.CardView
            android:id="@+id/tool_profile"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/btn_color"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/main_profile_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/user_profile"
                app:civ_border_color="@color/white" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>