<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
   >

<ImageView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:src="@drawable/network_error"
    android:layout_marginTop="20dp"
    android:layout_marginHorizontal="20dp"
    app:layout_constraintBottom_toTopOf="@id/no_internet_title"/>
    <TextView
        android:id="@+id/no_internet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/try_again_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="No Internet Connection Found \n Please Check Your Internet Connection."
        android:textColor="#B3E90538"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"/>

    <TextView
        android:id="@+id/try_again_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="TRY AGAIN"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/et_search_bg"
        android:backgroundTint="#B3E90538"
        android:paddingHorizontal="40dp"
        android:elevation="10dp"
        android:layout_marginBottom="20dp"
        android:paddingVertical="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>