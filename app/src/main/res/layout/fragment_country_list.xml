<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/btn_color"
        tools:context=".presentation.home.country.CountryList">
        <include
            android:id="@+id/mtoolbar"
            layout="@layout/toolbar"
            />

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:background="@drawable/page_bg"
           android:elevation="5dp"
           app:layout_constraintTop_toBottomOf="@id/mtoolbar"
           app:layout_constraintBottom_toBottomOf="parent">
          <androidx.constraintlayout.widget.ConstraintLayout
              android:id="@+id/search_cont"
              android:layout_width="match_parent"
              android:background="@drawable/country_item_bg"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="8dp"
              android:layout_marginHorizontal="8dp"
              android:layout_height="wrap_content">
              <EditText
                  android:id="@+id/country_list_search"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                   app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toStartOf="@id/home_search_icon"
                  android:paddingVertical="10dp"
                  android:hint="Search"
                  android:background="@android:color/transparent"
                  android:singleLine="true"
                  android:textSize="15sp"
                  android:elevation="3dp"
                  android:textColorHint="#E3E2E2"
                  android:textColor="@color/black"
                  android:paddingHorizontal="10dp"/>
              <ImageView
                  android:id="@+id/home_search_icon"
                  android:layout_width="35dp"
                  android:layout_height="0dp"
                  android:layout_marginEnd="2dp"
                  android:padding="8dp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  android:src="@drawable/search_icon"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:tint="@color/black" />
          </androidx.constraintlayout.widget.ConstraintLayout>



           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"

               app:layout_constraintTop_toBottomOf="@id/search_cont"
               app:layout_constraintBottom_toBottomOf="parent"
               android:layout_height="0dp">
               <View
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_marginTop="3dp"
                   android:paddingBottom="2dp"

                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="@id/countryList_rv"
                   />

               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/countryList_rv"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="5dp"
                   android:layout_marginTop="4dp"
                   app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                   app:layout_constraintTop_toTopOf="parent"
                   app:spanCount="2"
                   tools:layout_editor_absoluteX="5dp"
                   tools:listitem="@layout/item_country_list" />


           </androidx.constraintlayout.widget.ConstraintLayout>

       </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>