<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
<ImageView
    android:id="@+id/country_code_flag"
    android:layout_width="30dp"
    android:layout_height="20dp"
    android:src="@drawable/flag_india"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/country_code_country_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="India"
        android:textColor="@color/textcolor"
        android:textSize="15sp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintEnd_toStartOf="@id/country_code_code"
        app:layout_constraintStart_toEndOf="@id/country_code_flag"
        app:layout_constraintTop_toTopOf="@id/country_code_flag"
        app:layout_constraintBottom_toBottomOf="@id/country_code_flag"/>

    <TextView
        android:id="@+id/country_code_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="15sp"
        tools:text="+91"
        android:textColor="@color/red"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/country_code_flag"
        app:layout_constraintBottom_toBottomOf="@id/country_code_flag"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>