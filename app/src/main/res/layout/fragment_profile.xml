<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewmodel"
            type="com.ashomapp.presentation.profile.ProfileViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/btn_color"
    tools:context=".presentation.profile.ProfileFragment">

    <include android:id="@+id/mtoolbar"
        layout="@layout/toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/page_bg"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/mtoolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="5dp"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/update_pro_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/btn_color"
                    android:text="Update Profile"
                    android:textSize="17sp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginHorizontal="40dp"
                    android:textStyle="bold"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/update_pro_iv"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:layout_constraintTop_toBottomOf="@id/update_pro_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="1dp"
                    android:layout_marginVertical="0dp"
                    android:src="@drawable/profile"
                    android:elevation="5dp"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/update_pro_change_pro"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    app:layout_constraintBottom_toBottomOf="@id/update_pro_iv"
                    app:layout_constraintEnd_toEndOf="@id/update_pro_iv"
                    android:src="@drawable/add_icon"
                    android:elevation="6dp"
                    android:padding="5dp"
                    android:layout_marginBottom="-5dp"
                    android:layout_marginEnd="-5dp"
                    app:civ_circle_background_color="@color/white"
                    android:scaleType="centerCrop"
                    />
                <!--android:text="@={viewmodel.pollQuestion}"-->

                <EditText
                    android:id="@+id/update_pro_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/update_pro_iv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="40dp"
                    android:hint="First name"
                    android:textColorHint="@color/hint_color"
                    android:textColor="@color/black"
                    android:focusable="true"
                    android:singleLine="true"
                    android:text="@={viewmodel.pro_firstname}"
                    android:textSize="16sp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/hint_color"/>
                <EditText
                    android:id="@+id/update_pro_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/update_pro_firstname"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="40dp"
                    android:hint="Last name"
                    android:textColorHint="@color/grey"
                    android:textColor="@color/black"
                    android:focusable="true"
                    android:text="@={viewmodel.pro_lastname}"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:layout_marginTop="25dp"
                    android:backgroundTint="@color/hint_color"/>
                <EditText
                    android:id="@+id/update_pro_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/update_pro_lastname"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="40dp"
                    android:hint="Email"
                    android:textColorHint="@color/hint_color"
                    android:textColor="@color/black"
                    android:focusable="true"
                    android:text="@={viewmodel.pro_email}"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginTop="25dp"
                    android:backgroundTint="@color/hint_color"/>
                <EditText
                    android:id="@+id/update_pro_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/update_pro_email"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="40dp"
                    android:hint="Mobile"
                    android:text="@={viewmodel.pro_phone}"
                    android:textColorHint="@color/hint_color"
                    android:textColor="@color/black"
                    android:focusable="true"
                    android:textSize="16sp"
                    android:inputType="number"
                    android:singleLine="true"
                    android:layout_marginTop="25dp"
                    android:backgroundTint="@color/hint_color"/>

                <TextView
                    android:id="@+id/update_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="UPDATE"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:elevation="5dp"
                    app:layout_constraintTop_toBottomOf="@id/update_pro_phone"
                    android:textAlignment="center"
                    android:paddingVertical="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="40dp"
                    android:background="@drawable/btn_bg"
                    android:layout_marginVertical="40dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>